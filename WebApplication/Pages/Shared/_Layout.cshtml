<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Connect Four</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">Connect Four</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2020 - Connect Four - <a href="https://www.google.com/">Help</a> - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@RenderSection("Scripts", required: false)
</body>
</html>

<style>
*:focus {
    outline: none !important;
}

.board_circle {
    border: 0.1rem solid black;
    border-radius: 10rem;
    height: 85%;
    width: 85%;
    display: flex;
    justify-content: center;
    align-items: center;
    background: lightgray;
}

.board-td {
    position: relative;
    text-align: center;
    text-align: -webkit-center;
    text-align: -moz-center;
}

.board-th {
    position: relative;
}

.board-td:hover::after,
.board-th:hover::after {
  content: "";
  position: absolute;
  background-color: lightcyan;
  left: 0;
  top: -5000px;
  height: 10000px;
  width: 100%;
  z-index: -1;
}

.custom_button {
    padding: 5px;
    margin: 5px 5px 5px 0px;
    width: fit-content;
    border: 2px solid #175595;
    border-radius: 10px;
    background: #2d84db;
    color: white !important;
    font-weight: 500;
    
    user-select: none;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
}
.custom_button:active {
    border: 2px solid #2d84db;
    background: #175595;
}
.custom_button:hover {
    cursor: pointer;
    text-decoration: none;
}

.cancel {
    border: 2px solid #c7802b;
    border-radius: 10px;
    background: #dbb23c;
}
.cancel:active {
    border: 2px solid #dbb23c;
    border-radius: 10px;
    background: #c7802b;
}

.circle-1 {
    background: dodgerblue;
}
.circle-2 {
    background: red;
}

.custom_input {
    border: 1px solid lightgray;
    border-radius: 20px;
    padding: 5px 8px 5px 8px;
    width: 50px;
}
.custom_input:focus {
    outline: none;
    border: 1px solid #2d84db;
}

.delete_button {
    font-size: 20px; 
    color: red; 
    font-weight: 600;
    cursor: pointer;
}

.image_wrapper {
    height: 300px;
    width: 440px;
}
.image {
    object-fit: fill;
    height: inherit;
    width: inherit;
}

.main {
    display: grid;
    grid-auto-columns: 1fr 1fr;
    grid-auto-rows: 1fr 5fr;
}

.title {
    color: #2d84db; 
    font-weight: 400;
    margin-bottom: 20px;
}
</style>
