@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="main">
    <h1 class="display-4 title" style="grid-area: 1 / 1 / 2 / 3">Connect Four</h1>
    <br/>
    <div style="grid-area: 2 / 1 / 3 / 2; display: flex; flex-direction: column">
        <div><input type="checkbox" checked/> Human starts</div>
        <a asp-page="PlayGame" class="custom_button">New game</a>
        <a asp-page="LoadGame" class="custom_button">Load game</a>
        <a asp-page="Options" class="custom_button">Options</a>
    </div>
    <div style="grid-area: 2 / 2 / 3 / 3; justify-self: flex-end">
        <div class="image_wrapper">
            <img class="image" alt="child" src="~/img/connect-4.0.jpg"/>
        </div>
        <div style="display: flex; justify-content: flex-end">
            <a href="https://www.amazon.com/s?k=connect+4&ref=nb_sb_noss_1">Also available as a physical tabletop game!</a>
        </div>
    </div>
</div>

